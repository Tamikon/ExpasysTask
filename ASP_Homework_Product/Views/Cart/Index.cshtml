@model Cart

@if (Model == null || Model.Items.Count == 0)
{
    <h3>Корзина пустая</h3>
}
else
{
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Цена, руб</th>
                        <th>Количество</th>
                        <th>Стоимость</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Product.Name</td>
                            <td>@item.Product.Cost</td>
                            <td>@item.Amount</td>
                            <td>@item.Cost</td>
                            <td>
                                <a href="/cart/decreaseAmount?productId=@item.Product.Id" class="btn btn-primary">-</a>
                                <a href="/cart/add?productId=@item.Product.Id" class="btn btn-success">+</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-right">
                <h3>Итого:</h3>
                <h3>@Model.Cost</h3>
            </div>
            <div class="text-center">
                <a href="/home/index" class="btn btn-primary">Вернуться к списку товаров</a>
                <a href="/order/index" class="btn btn-success">Оформить заказ</a>
                <a href="/cart/clear" class="btn btn-danger">Очистить корзину</a>
            </div>
        </div>
    </div>
}
