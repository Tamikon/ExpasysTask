<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Мои заказы</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        .table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .btn {
            background-color: #007bff;
            color: white;
            padding: 5px 10px;
            text-decoration: none;
            margin: 5px;
        }
    </style>
</head>
<body>
    <h3>Мои заказы</h3>
    <div id="orders-container"></div>
    <a href="/home/index" class="btn">Вернуться к товарам</a>

    <script>
        $(document).ready(function () {
            loadOrders();

            function loadOrders() {
                $.ajax({
                    url: "/Order/GetOrders",
                    type: "GET",
                    dataType: "json",
                    success: function (response) {
                        if (response.success) {
                            let ordersHtml = `
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>№</th>
                                            <th>Сумма</th>
                                            <th>Статус</th>
                                            <th>Дата</th>
                                            <th>Время</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                            `;
                            response.orders.forEach((order, index) => {
                                ordersHtml += `
                                    <tr>
                                        <td>${index + 1}</td>
                                        <td>${order.cost}</td>
                                        <td>${order.status}</td>
                                        <td>${new Date(order.createDateTime).toLocaleDateString()}</td>
                                        <td>${new Date(order.createDateTime).toLocaleTimeString()}</td>
                                        <td><a href="/order/details?orderId=${order.id}" class="btn">Подробнее</a></td>
                                    </tr>
                                `;
                            });
                            ordersHtml += `</tbody></table>`;
                            $("#orders-container").html(ordersHtml);
                        } else {
                            $("#orders-container").html("<p>У вас пока нет заказов.</p>");
                        }
                    },
                    error: function (xhr) {
                        if (xhr.status === 401) {
                            window.location.href = "/Account/Login";
                        } else {
                            $("#orders-container").html("<p>Ошибка загрузки заказов</p>");
                        }
                    }
                });
            }
        });
    </script>
</body>
</html>