<div class="text-center">
    <h2 class="display-4">Качественные ноутбуки по низкой цене</h2>
</div>

<div class="row justify-content-center">

    @foreach (var product in Model)
    {
        <div class="col-3 card shadow">
            <img class="card-img-top" src="@product.ImagePath">

            <div class="card-body">
                <a style="color:black" href="/product/index/@product.Id">
                    <h5>@product.Name</h5>
                </a>
                <h5>@product.Cost руб</h5>
                <a class="btn btn-dark" href="/cart/add?productId=@product.Id" role="button">Добавить в корзину</a>
            </div>
        </div>
    }
</div>