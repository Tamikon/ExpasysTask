@model List<Product>

<div class="row">
    @await Html.PartialAsync("AdminSideBar")

    <div class="col-9">
        <div class="row">
            <h3>Список продуктов</h3>
        </div>

        <a href="/admin/product/add">Добавить новый продукт</a>

        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th>№</th>
                        <th>Название</th>
                        <th>Цена</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Model[i].Name</td>
                            <td>@Model[i].Cost</td>
                            <td>
                                <a href="/admin/product/edit?productId=@Model[i].Id">Редактировать</a>
                            </td>
                            <td>
                                <form method="post" asp-controller="Product" asp-action="Delete" style="display: inline;">
                                    <input type="hidden" name="id" value="@Model[i].Id" />
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Удалить этот продукт?');">
                                        Удалить
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
